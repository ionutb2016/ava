<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.avantajc.updating"
        versionCode = "10"
        version     = "1.1.0">
 
    <name>Ava 001</name>
 
    <description>
        A simple updating app to keep track of the courses.
    </description>
 
    <author href="http://avantajconsulting.ro" email="office@avantajconsulting.ro">
        Avantaj Consulting App
    </author>
 
    
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
 

    <plugin name="com.indigoway.cordova.whitelist.whitelistplugin" spec="1.1.1" source="pgb" />
    <plugin name="org.apache.cordova.device" spec="0.2.3" source="pgb" />
    <gap:plugin name="org.apache.cordova.splashscreen" version="0.2.7" />

    <allow-navigation href="http://scripting.work/api/*" />
    <allow-navigation href="http://code.jquery.com/*" />
    <allow-navigation href="https://cdnjs.cloudflare.com/*" />
    <access origin="*" />

    
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
 
    <preference name="SplashScreenDelay" value="10000" /> 
    <preference name="SplashScreen" value="splashoriginal" />

    

    <icon gap:platform="android" gap:qualifier="ldpi" src="res/icons/android/icon-36-ldpi.png"/>
    <icon gap:platform="android" gap:qualifier="mdpi" src="res/icons/android/icon-48-mdpi.png"/>
    <icon gap:platform="android" gap:qualifier="hdpi" src="res/icons/android/icon-72-hdpi.png"/>
    <icon gap:platform="android" gap:qualifier="xhdpi" src="res/icons/android/icon-96-xhdpi.png"/>
    <icon gap:platform="android" gap:qualifier="xxhdpi" src="res/icons/android/icon-144-xxhdpi.png"/>
    <icon gap:platform="android" gap:qualifier="xxxhdpi" src="res/icons/android/icon-192-xxxhdpi.png"/>



    <platform name="android">
        <splash src="res/screens/android/splashoriginal.png" density="land-hdpi"/>
        <splash src="res/screens/android/splashoriginal.png" density="land-ldpi"/>
        <splash src="res/screens/android/splashoriginal.png" density="land-mdpi"/>
        <splash src="res/screens/android/splashoriginal.png" density="land-xhdpi"/>
        <splash src="res/screens/android/splashoriginal.png" density="port-hdpi"/>
        <splash src="res/screens/android/splashoriginal.png" density="port-ldpi"/>
        <splash src="res/screens/android/splashoriginal.png" density="port-mdpi"/>
        <splash src="res/screens/android/splashoriginal.png" density="port-xhdpi"/>
    </platform>


</widget>




